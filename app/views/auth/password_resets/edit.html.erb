<div class="min-h-screen flex flex-col items-center justify-center">
  <div class="max-w-md w-full space-y-8 shadow-lg p-10 rounded-lg">
    <div>
      <h1 class="text-center text-2xl font-bold text-gray-900 mb-8">
        <%= t('auth.passwords.reset.title') %>
      </h1>
    </div>
    <%= form_with model: @user, url: auth_password_reset_path(token: params[:token]), method: :patch, class: "mt-8 space-y-6" do |form| %>
      <% if form.object.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <% form.object.errors.full_messages.each do |message| %>
            <div class="text-sm text-red-700"><%= message %></div>
          <% end %>
        </div>
      <% end %>

      <div class="rounded-md space-y-6">
        <div class="mb-6">
          <%= form.label :password, t('auth.passwords.reset.new_password_label'),
              class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password,
              class: "appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: t('auth.passwords.reset.new_password_placeholder') %>
        </div>

        <div class="mb-6">
          <%= form.label :password_confirmation, t('auth.passwords.reset.password_confirmation_label'),
              class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password_confirmation,
              class: "appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",
              placeholder: t('auth.passwords.reset.password_confirmation_placeholder') %>
        </div>
      </div>

      <%= form.submit t('auth.passwords.reset.submit'),
          class: "w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-500 hover:bg-red-800 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    <% end %>
  </div>
</div>
